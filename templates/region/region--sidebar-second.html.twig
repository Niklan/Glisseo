{#
/**
 * @file
 * Theme override to display a region.
 *
 * Available variables:
 * - content: The content for this region, typically blocks.
 * - attributes: HTML attributes for the region div.
 * - region: The name of the region variable as defined in the theme's
 *   .info.yml file.
 *
 * @see template_preprocess_region()
 */
#}
{% set attributes = attributes.setAttribute('id', 'sidebar-second') %}
{% set attributes = attributes.addClass('region--sidebar-second') %}
{% set attributes = attributes.setAttribute('role', 'complementary') %}
{% if content %}
  <aside{{ attributes }}>
    {{ content }}
  </aside>
{% endif %}