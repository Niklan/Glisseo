{#
/**
 * @file
 * Theme override to display a region.
 *
 * Available variables:
 * - content: The content for this region, typically blocks.
 * - attributes: HTML attributes for the region div.
 * - region: The name of the region variable as defined in the theme's
 *   .info.yml file.
 *
 * @see template_preprocess_region()
 */
#}
{% set attributes = attributes.setAttribute('id', 'header') %}
{% set attributes = attributes.addClass('region-header') %}
{% set attributes = attributes.setAttribute('role', 'banner') %}
{% if content %}
  <header{{ attributes }}>
    <div class="container">
      {{ content }}
    </div>
  </header>
{% endif %}