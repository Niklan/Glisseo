{%
  set block = block ?? bem_block([
    paragraph.entityTypeId(),
    paragraph.bundle() != paragraph.entityTypeId() ? paragraph.bundle(),
    view_mode != 'default' ? view_mode,
  ])
%}
{%
  set classes = [
    bem(block),
  ]
%}
<div{{ attributes.addClass(classes) }}>
  {% block paragraph %}
    <div class="{{ bem(block, 'content') }}">
      {% block content %}
        {{ content }}
      {% endblock %}
    </div>
  {% endblock paragraph %}
</div>
