{%
  set block = bem_block([
    user.entityTypeId(),
    user.bundle() != user.entityTypeId() ? user.bundle(),
    view_mode != 'default' ? view_mode,
  ])
%}
{% set classes = [block] %}
<article{{ attributes.addClass(classes) }}>
  {% block user %}
    {% if content %}
      {% block content %}
        {{- content -}}
      {% endblock %}
    {% endif %}
  {% endblock user %}
</article>
