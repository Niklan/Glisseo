{%
  set bem_block = bem_block([
    user.entityTypeId(),
    user.bundle() != user.entityTypeId() ? user.bundle(),
    view_mode != 'default' ? view_mode,
  ])
%}
<article{{ attributes.addClass(bem_block) }}>
  {% block user %}
    {% if content %}
      {% block content %}
        {{- content -}}
      {% endblock %}
    {% endif %}
  {% endblock user %}
</article>
