{%
  set bem_block = bem_block([
    media.getEntityTypeId(),
    media.bundle() != media.getEntityTypeId() ? media.bundle(),
    view_mode != 'default' ? view_mode,
  ])
%}
<article{{ attributes.addClass(bem_block) }}>
  {% block media %}
    {{ title_suffix.contextual_links }}
    {% if content %}
      {% block content %}
        {{ content }}
      {% endblock %}
    {% endif %}
  {% endblock media %}
</article>
