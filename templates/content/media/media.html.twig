{% set bem_block = 'media-' ~ media.bundle ~ '-' ~ view_mode|clean_class|replace({'--': '-'}) %}
{%
  set classes = [
    bem_block,
  ]
%}
{% for bem_modifier in bem_modifiers %}
  {% if bem_modifier|length %}
    {% set classes = classes|merge([bem_block ~ '--' ~ bem_modifier]) %}
  {% endif %}
{% endfor %}
<article{{ attributes.addClass(classes) }}>
  {% block media %}
    {{ title_suffix.contextual_links }}
    {% if content %}
      {% block content %}
        {{ content }}
      {% endblock %}
    {% endif %}
  {% endblock media %}
</article>
