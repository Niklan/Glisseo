{% set bem_block = bem_block ?: ('media-' ~ media.bundle() ~ (view_mode != 'default' ? '-' ~ view_mode))|clean_class %}
{% set classes = [
  bem_block,
  not media.isPublished() ? bem_block ~ '--unpublished',
] %}
<article{{ attributes.addClass(classes) }}>
  {{ title_suffix.contextual_links }}
  {% if content %}
    {% block content %}
      {{ content }}
    {% endblock %}
  {% endif %}
</article>
