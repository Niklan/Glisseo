{%
  set block = block ?? bem_block([
    term.entityTypeId(),
    term.bundle() != term.entityTypeId() ? term.bundle(),
    view_mode != 'default' ? view_mode,
  ])
%}
{%
  set classes = [
    bem(block),
  ]
%}
<div{{ attributes.addClass(classes) }}>
  {{ title_prefix }}
  {{ title_suffix }}

  {% block taxonomy_term %}
    {% if not page %}
      <h2 class="{{ bem(block, 'title') }}">
        {% block title %}
          <a href="{{ url }}">{{ name }}</a>
        {% endblock %}
      </h2>
    {% endif %}

    <div class="{{ bem(block, 'content') }}">
      {% block content %}
        {{ content }}
      {% endblock %}
    </div>
  {% endblock taxonomy_term %}
</div>
