{% set bem_block = 'layout' %}
{% set classes = [
  bem_block,
  bem_block ~ '--' ~ layout.id|clean_class,
] %}
{% if content %}
  <div{{ attributes.addClass(classes) }}>
    {% for region in layout.getRegionNames %}
      {% if content[region] %}
        {% set region_classes = [
          bem_block ~ '__region',
          bem_block ~ '__region--' ~ region|clean_class,
        ] %}

        <div {{ region_attributes[region].addClass(region_classes) }}>
          {{ content[region] }}
        </div>
      {% endif %}
    {% endfor %}
  </div>
{% endif %}
